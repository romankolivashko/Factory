@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}

<ul style="list-style-type:none;">
@foreach (Engineer engineer in Model)
{
  <li>
    @Html.ActionLink($"{engineer.Description}", "Details", new { id = engineer.EngineerId })
    @if (engineer.Licenced == true)
    {
      <span> - completed</span>;
    }
  </li>
}
</ul>

<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
