@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<div class="row justify-content-start">
  <div class="col-4">
    <h3>@Html.ActionLink("Add new engineer", "Create")</h3>
    <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
  </div>
  <div class="col-8">
    <h1><u>All Engineers</u></h1>

    @if (@Model.Count == 0)
    {
      <h3>No engineers have been added yet!</h3>
    }

    <ul style="list-style-type:none;">
      @foreach (Engineer engineer in Model)
      {
        <li>
          @Html.ActionLink($"{engineer.Description}", "Details", new { id = engineer.EngineerId })
          @if (engineer.Licensed == true)
          {
            <span> - licensed</span>
            ;
          }
        </li>
      }
    </ul>
  </div>
</div>