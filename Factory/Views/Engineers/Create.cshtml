@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="row justify-content-start">
  <div class="col-4 menu">
    <h3>@Html.ActionLink("Show all engineers", "Index")</h3>
    <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
  </div>
  <div class="col-8">
    <div class="jumbotron">
      <h3><u>Add new engineer</u></h3>
      <br>
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Description)
        <span>&nbsp;&nbsp;</span>
        @Html.TextBoxFor(model => model.Description)
        <br>
        <br>
        @Html.LabelFor(model => model.Hired)
        <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
        @Html.TextBoxFor(model => model.Hired, new {type = "date"})
        <br>
        <br>
        @Html.Label("Select Machine")
        <span></span>
        @Html.DropDownList("MachineId")
        <br>
        <br>
        @* @Html.HiddenFor(model => model.Licensed) *@
        <button class="btn btn-default float-center"><input type="submit" value="Add new engineer" /></button>
      }
    </div>
  </div>
</div>