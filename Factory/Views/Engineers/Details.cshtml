@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer




<div class="row justify-content-start">
  <div class="col-3">
    <p>@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId })</p>
    <p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
    <p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
    <p>@Html.ActionLink("Back to engineers", "Index")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
  <div class="col-9">
    <h2><u>Engineer Details</u></h2>
    <br>
    <h3>Name: @Html.DisplayFor(model => model.Description)</h3>
    <p>Hired: @Model.Hired.ToString("d")</p>

    @if (@Model.JoinEntities.Count == 0)
    {
      <p>This engineer is not assigned to any machine.</p>
    }
    else
    {
      <h4>Machines this engineer assigned to:</h4>
      <ul style="list-style-type:none;">
        @foreach (var join in Model.JoinEntities)
        {
          <li> âž¢ @join.Machine.Name</li><br>

          @using (Html.BeginForm("DeleteMachine", "Engineers"))
          {
            @Html.Hidden("joinId", @join.MachineEngineerId) <input type="submit" value="Remove" />
          }
          <br>
        }
      </ul>
    }
  </div>

</div>
