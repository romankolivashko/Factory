@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="row justify-content-start">
  <div class="col-4">
    <h3>@Html.ActionLink("Add new machine", "Create")</h3>
    <h3>@Html.ActionLink("Return Home", "Index", "Home")</h3>
  </div>
  <div class="col-8">
    <div class="jumbotron">
    <h1>Machines</h1>

    @if (@Model.Count == 0)
    {
      <h3>No machines have been added yet!</h3>
    }

    <ul style="list-style-type:none;">
      @foreach (Machine machine in Model)
      {
        <li><h3>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</h3></li>
      }
    </ul>
    </div>
  </div>
</div>