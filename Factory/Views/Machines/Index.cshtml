@{
  Layout = "_Layout";
}

@using Factory.Models;

  <div class="row">
    <div class="col-6 inner">
      <h1>Machines</h1>
      <br>
      <br>
      <div class="row">
        <div class="col-6">
         @if (@Model.Count == 0)
          {
            <h3>No machines have been added yet!</h3>
          } 


          <ul style="list-style-type:none;">
            @foreach(Machine machine in Model)
            {
              <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
            }
          </ul>
        </div>
        <div class="col-6">

        </div>
      </div>
      <div class="row">
        <div class="col-6">
        <p>@Html.ActionLink("Add new machine", "Create")</p>
        </div>
        <div class="col-6">
        <p>@Html.ActionLink("Home", "Index", "Home")</p>
        </div>
      </div>
    </div>
    <div class="col-6">
      <img src="~/img/arm.png" class="float-right" alt="...">
    </div>
  </div>
