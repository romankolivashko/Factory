@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="row justify-content-start">
  <div class="col-4">
    <h3>@Html.ActionLink("Back to machines list", "Index")</h3>
    <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
  </div>
  <div class="col-8">
    <div class="jumbotron">
    <h2>Edit @Html.DisplayFor(model => model.Name)</h2>
    <br>
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.MachineId)
      @Html.LabelFor(model => model.Name) <span> &nbsp; </span>
      @Html.EditorFor(model => model.Name)
      <input type="submit" value="Save" />
    }
    </div>
  </div>
</div>